<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <GridLayout
            android:id="@+id/cgd1"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:orientation="horizontal"
            android:rowCount="1"
            android:columnCount="7">

            <View
                android:id="@+id/ctop1"
                android:layout_width="50dp"
                android:layout_height="160dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/customerhome_bg"/>

            <View
                android:id="@+id/ctop2"
                android:layout_width="50dp"
                android:layout_height="140dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/customerhome_bg"/>
            <View
                android:id="@+id/ctop3"
                android:layout_width="50dp"
                android:layout_height="90dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/customerhome_bg"/>
            <View
                android:id="@+id/ctop4"
                android:layout_width="50dp"
                android:layout_height="120dp"
                android:layout_marginRight="11dp"
                android:background="@drawable/customerhome_bg"/>
            <View
                android:id="@+id/ctop5"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/customerhome_bg"/>
            <View
                android:id="@+id/ctop6"
                android:layout_width="50dp"
                android:layout_height="160dp"
                android:layout_marginRight="11dp"
                android:background="@drawable/customerhome_bg"/>
            <View
                android:id="@+id/ctop7"
                android:layout_width="50dp"
                android:layout_height="130dp"
                android:layout_marginRight="11dp"
                android:background="@drawable/customerhome_bg"/>


        </GridLayout>

        <ImageView
            android:id="@+id/Customerimg"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:src="@drawable/img"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="6dp"/>

        <TextView
            android:id="@+id/Customer2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sahaya"
            android:layout_marginLeft="20dp"
            android:textAlignment="center"
            android:layout_marginTop="40dp"
            android:textStyle="bold"
            android:textSize="50dp"
            android:textColor="@color/black"
            android:layout_toRightOf="@+id/Customerimg"/>

        <TextView
            android:id="@+id/hometext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcomes You!"
            android:layout_marginLeft="180dp"
            android:textAlignment="center"
            android:layout_marginTop="100dp"
            android:textStyle="bold"
            android:textSize="22dp"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/hometext1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Home Page"
            android:layout_marginLeft="120dp"
            android:textAlignment="center"
            android:layout_marginTop="160dp"
            android:textStyle="bold"
            android:textSize="30dp"
            android:textColor="@color/purple_500" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="210dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/CustomerHome"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="20dp"
                android:clickable="true"
                android:focusable="true"
                app:cardCornerRadius="15dp"
                app:cardElevation="25dp">

                <LinearLayout
                    android:id="@+id/Customer5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/Customer6"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/baseline_home" />

                    <TextView
                        android:id="@+id/Customer7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="Sahaya Home "
                        android:textColor="@color/black"
                        android:textSize="18dp"
                        android:textStyle="bold" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/CustomerSettings"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="220dp"
                android:layout_marginBottom="120dp"
                android:clickable="true"
                android:focusable="true"
                app:cardCornerRadius="15dp"
                app:cardElevation="25dp">

                <LinearLayout
                    android:id="@+id/Customer9"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/Customer10"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/baseline_settings" />

                    <TextView
                        android:id="@+id/Customer11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="Settings"
                        android:textColor="@color/black"
                        android:textSize="18dp"
                        android:textStyle="bold" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/CustomerSearch"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="210dp"
                android:clickable="true"
                android:focusable="true"
                app:cardCornerRadius="15dp"
                app:cardElevation="25dp">

                <LinearLayout
                    android:id="@+id/Customer13"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/Customer14"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/baseline_search" />

                    <TextView
                        android:id="@+id/Customer15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="Search Services"
                        android:textColor="@color/black"
                        android:textSize="18dp"
                        android:textStyle="bold" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/CustomerProfile"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_marginTop="220dp"
                android:layout_marginLeft="210dp"
                android:clickable="true"
                android:focusable="true"
                app:cardCornerRadius="15dp"
                app:cardElevation="25dp">

                <LinearLayout
                    android:id="@+id/Customer17"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/Customer18"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/baseline_account" />

                    <TextView
                        android:id="@+id/Customer19"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="Account"
                        android:textColor="@color/black"
                        android:textSize="18dp"
                        android:textStyle="bold" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </androidx.cardview.widget.CardView>

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>