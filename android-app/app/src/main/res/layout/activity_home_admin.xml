<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Your UI elements here -->

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <View
        android:id="@+id/top_ViewAdmin"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/user_bg"/>

    <ImageView
        android:id="@+id/Admin1"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/img"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="6dp"/>

    <TextView
        android:id="@+id/Admin2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to Sahaya"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="30dp"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="45dp"/>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="-70dp"
        android:layout_below="@+id/top_ViewAdmin"
        android:rowCount="4"
        android:columnCount="1">

        <!-- Sahaya Customers Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewCustomers"
            android:layout_width="335dp"
            android:layout_height="100dp"
            app:cardCornerRadius="15dp"
            android:layout_margin="12dp"
            android:clickable="true"
            android:focusable="true"
            app:cardElevation="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">
                <ImageView
                    android:layout_width="180dp"
                    android:layout_height="65dp"
                    android:src="@drawable/sahaya_customers"
                    android:layout_gravity="center_horizontal"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sahaya Customers"
                    android:layout_gravity="center_horizontal"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Sahaya Service Providers Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewProviders"
            android:layout_width="335dp"
            android:layout_height="100dp"
            app:cardCornerRadius="15dp"
            android:layout_margin="12dp"
            android:clickable="true"
            android:focusable="true"
            app:cardElevation="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">
                <ImageView
                    android:layout_width="180dp"
                    android:layout_height="65dp"
                    android:src="@drawable/sahaya_providers"
                    android:layout_gravity="center_horizontal"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sahaya Providers"
                    android:layout_gravity="center_horizontal"
                    android:textSize="22dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Booking Requests Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/Services"
            android:layout_width="335dp"
            android:layout_height="100dp"
            app:cardCornerRadius="15dp"
            android:layout_margin="12dp"
            android:clickable="true"
            android:focusable="true"
            app:cardElevation="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">
                <ImageView
                    android:layout_width="180dp"
                    android:layout_height="65dp"
                    android:src="@drawable/sahaya_services"
                    android:layout_gravity="center_horizontal"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sahaya Services"
                    android:layout_gravity="center_horizontal"
                    android:textSize="22dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Admin Panel Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewAdmin"
            android:layout_width="335dp"
            android:layout_height="100dp"
            app:cardCornerRadius="15dp"
            android:layout_margin="12dp"
            android:clickable="true"
            android:focusable="true"
            app:cardElevation="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">
                <ImageView
                    android:layout_width="180dp"
                    android:layout_height="65dp"
                    android:src="@drawable/sahaya_admin"
                    android:layout_gravity="center_horizontal"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Admin Panel"
                    android:layout_gravity="center_horizontal"
                    android:textSize="22dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </GridLayout>
</RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
