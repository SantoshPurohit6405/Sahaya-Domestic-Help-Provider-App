<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <GridLayout
        android:id="@+id/searchgrid"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:orientation="horizontal"
        android:rowCount="1"
        android:columnCount="5">
        <View
            android:layout_width="70dp"
            android:layout_height="160dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/customerhome_bg"/>
        <View
            android:layout_width="60dp"
            android:layout_height="100dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/customerhome_bg"/>
        <View
            android:layout_width="100dp"
            android:layout_height="130dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/customerhome_bg"/>
        <View
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/customerhome_bg"/>
        <View
            android:layout_width="70dp"
            android:layout_height="120dp"
            android:layout_marginRight="11dp"
            android:background="@drawable/customerhome_bg"/>
    </GridLayout>

    <ImageView
        android:id="@+id/Customerimg"
        android:layout_width="150dp"
        android:layout_height="135dp"
        android:src="@drawable/img"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"/>
    <TextView
        android:id="@+id/Customer2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sahaya Services"
        android:layout_marginLeft="10dp"
        android:textAlignment="center"
        android:layout_marginTop="40dp"
        android:textStyle="bold"
        android:textSize="30dp"
        android:textColor="@color/black"
        android:layout_toRightOf="@+id/Customerimg"/>

    <TextView
        android:id="@+id/hometext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Your Service Here!"
        android:layout_marginLeft="165dp"
        android:textAlignment="center"
        android:layout_marginTop="80dp"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="@color/black" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="2"
        android:rowCount="4"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_below="@id/searchgrid"
        android:layout_marginTop="-15dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/HouseHelp"
            android:layout_width="150dp"
            android:layout_height="130dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="15dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_row="0"
            android:layout_column="0"
            android:clickable="true"
            android:focusable="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/img_6"
                    android:layout_gravity="center_horizontal" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sahaya House Help"
                    android:layout_gravity="center_horizontal"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:textColor="@color/purple_500"
                    android:padding="2dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/HomeCook"
            android:layout_width="150dp"
            android:layout_height="130dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="15dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:clickable="true"
            android:focusable="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/img_4"
                    android:layout_gravity="center_horizontal"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sahaya Home Cook"
                    android:layout_gravity="center_horizontal"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:textColor="@color/purple_500"
                    android:padding="2dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/Electrician"
            android:layout_width="150dp"
            android:layout_height="130dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="15dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:clickable="true"
            android:focusable="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/img_2"
                    android:layout_gravity="center_horizontal"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sahaya Electrician"
                    android:layout_gravity="center_horizontal"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:textColor="@color/purple_500"
                    android:padding="2dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/Plumber"
            android:layout_width="150dp"
            android:layout_height="130dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="15dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:clickable="true"
            android:focusable="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/img_3"
                    android:layout_gravity="center_horizontal" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sahaya Plumber"
                    android:layout_gravity="center_horizontal"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:textColor="@color/purple_500"
                    android:padding="2dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/HomeDriver"
            android:layout_width="150dp"
            android:layout_height="130dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="15dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:clickable="true"
            android:focusable="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/img_1"
                    android:layout_gravity="center_horizontal"
                    android:padding="5dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sahaya Home Driver"
                    android:layout_gravity="center_horizontal"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:textColor="@color/purple_500"
                    android:padding="2dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/Ward"
            android:layout_width="150dp"
            android:layout_height="130dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="15dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:clickable="true"
            android:focusable="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/img_5"
                    android:layout_gravity="center_horizontal"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sahaya Ward Help"
                    android:layout_gravity="center_horizontal"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:textColor="@color/purple_500"
                    android:padding="2dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </GridLayout>
</RelativeLayout>