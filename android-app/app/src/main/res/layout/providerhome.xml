<?xml version="1.0" encoding="utf-8"?>
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".MainActivity">

        <View
            android:id="@+id/top_ViewProvider"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:background="@drawable/provider_bg"/>

        <ImageView
            android:id="@+id/Providerimg"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/img"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/Customer2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome to Sahaya"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="30dp"
            android:layout_toRightOf="@+id/Providerimg"
            android:gravity="center"
            android:layout_marginTop="60dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="130dp"
                android:paddingLeft="140dp"
                android:text="Home Page"
                android:textSize="28dp"
                android:textStyle="bold"
                android:textColor="@color/white"/>

            <LinearLayout
                android:id="@+id/PLinear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/top_ViewProvider">

                <androidx.cardview.widget.CardView
                    android:id="@+id/pHome"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="45dp"
                    app:cardCornerRadius="30dp"
                    android:layout_marginBottom="20dp"
                    app:cardElevation="20dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="@drawable/custom_edittext">

                <LinearLayout
                    android:id="@+id/Customer5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/Customer6"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/baseline_home"
                        android:layout_gravity="center_horizontal"/>

                    <TextView
                        android:id="@+id/Customer7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sahaya Home "
                        android:layout_gravity="center_horizontal"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:textColor="@color/black"/>

                </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/pSettings"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginBottom="20dp"
                    app:cardCornerRadius="30dp"
                    app:cardElevation="20dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="@drawable/custom_edittext">

                    <LinearLayout
                        android:id="@+id/Customer9"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/Customer10"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/baseline_settings"
                            android:layout_gravity="center_horizontal"/>

                        <TextView
                            android:id="@+id/Customer11"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Settings"
                            android:layout_gravity="center_horizontal"
                            android:textSize="18dp"
                            android:textStyle="bold"
                            android:textColor="@color/black"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_below="@+id/PLinear">

                <androidx.cardview.widget.CardView
                    android:id="@+id/pServices"
                    android:layout_width="320dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center"
                    app:cardCornerRadius="30dp"
                    android:clickable="true"
                    android:focusable="true"
                    app:cardElevation="20dp"
                    android:background="@drawable/custom_edittext">

                    <LinearLayout
                        android:id="@+id/Customer171"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/Customer181"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:src="@drawable/notify"
                            android:layout_gravity="center_horizontal"/>

                        <TextView
                            android:id="@+id/Customer121"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Your Service Requests"
                            android:layout_gravity="center_horizontal"
                            android:textSize="18dp"
                            android:textStyle="bold"
                            android:textColor="@color/black"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/pProfile"
                    android:layout_width="320dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    app:cardCornerRadius="30dp"
                    app:cardElevation="20dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="@drawable/custom_edittext">

                    <LinearLayout
                        android:id="@+id/Customer17"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/Customer18"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:src="@drawable/baseline_account"
                            android:layout_gravity="center_horizontal"/>

                        <TextView
                            android:id="@+id/Customer19"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Your Profile"
                            android:layout_gravity="center_horizontal"
                            android:textSize="18dp"
                            android:textStyle="bold"
                            android:textColor="@color/black"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>


            </LinearLayout>

        </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>