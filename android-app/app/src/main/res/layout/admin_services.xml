<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">

    <GridLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/login_image1"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/img"
            android:layout_marginEnd="10dp"/>

        <!-- Animated Text -->
        <TextView
            android:id="@+id/splashText1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:text="Sahaya"
            android:textColor="@color/purple"
            android:textSize="42sp"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/login_image"
            android:layout_marginLeft="10dp"/>
    </GridLayout>

    <!-- Underlined Text -->
    <TextView
        android:id="@+id/providers1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sahaya Services's List"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/purple_500"
        android:layout_gravity="center_horizontal"
        android:padding="10dp"/>

    <ProgressBar
        android:id="@+id/progressBar11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_gravity="center"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:scrollbars="vertical"/>

</LinearLayout>